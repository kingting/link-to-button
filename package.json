  "bugs": {
    "url": "https://github.com/kingting/link-to-button/issues"
  },
  "homepage": "https://github.com/kingting/link-to-button#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "typescript": "^5.4.5"
  }
